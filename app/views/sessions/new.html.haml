=content_for :head do
  <meta name="description" content="#{t("account.club_login")}">
  <title>HANCHORï½œ#{t("account.club_login")}</title>

/ start main
%section.wrapper
  / rwd padding
  %section.full-bg
    .login-bg.ofhidden
    / rwd width limited
    .rwd-width-limited
      / login / signup
      .login-signup-sec.clearfix
        .login-signup-sec-bg
          .mg-b-30
            = link_to root_path, {class: "block signup-logo", hov: "0.75"} do
              = image_tag 'logo-h-w.png', alt: "Hanchor", class: "block"
          = form_tag '/login' do
            .mg-b-30
              %h2.text-24.lh-30.color-white.bold #{t('sign_in')}
            = text_field_tag :email, nil, class: 'input-text mg-b-20', placeholder: t("placeholder.email")
            = password_field_tag :password, nil, class: 'input-text mg-b-20', placeholder: t("placeholder.password")
            .mg-b-20
              = submit_tag t('sign_in'), class: 'btn-l btn-blue', hov: "0.75"
          .clearfix.mg-b-35
            .login-info-left.text-13.lh-20.color-gray-999
              #{t('not_member')}
              = link_to t("istant_register"),register_path, {class: "color-blue bold", :hov => "0.7"}
            .login-info-right.text-13.lh-20.color-gray-999
              = link_to t('account.forget_password'),forget_password_path, class: 'text-1 color-grey-1', :hov => "0.7"
          .mg-b-20
            = button_to auth_path('facebook'), {class: "btn-l btn-blue btn-fb", hov: "0.75"} do
              %i.fa.fa-facebook-square{"aria-hidden" => "true"}>
              Facebook #{t('sign_in')}
      / login / signup
    / rwd width limited
  / rwd padding
/ end main
