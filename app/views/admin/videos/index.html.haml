= link_to "Add New Video", new_admin_video_path, class: "btn btn-s btn-blue inlineblock-imp"

%table.admin-table
  %tr
    %th 編號
    %th 連結
    %th 排序

  - @videos.each do |video|
    %tr
      %td= video.id
      %td= video.link
      %td= video.sort
      %td= link_to 'Edit', edit_admin_video_path(video)
      %td= link_to 'Destroy', admin_video_path(video), method: :delete, data: { confirm: 'Are you sure?' }


%nav.page-menu.relative
  = will_paginate(@videos, :renderer => 'BootstrapPaginationHelper::LinkRenderer')
