<% if @success %>
  <% if @old %>
	  $.magnificPopup.open({
		  items: {
		    src: '#subscribed'
		  },
		  type: 'inline'
		});
	<% else %>
		$.magnificPopup.open({
		  items: {
		    src: '#subscribe-success'
		  },
		  type: 'inline'
		});
	<% end %>
<% else %>
  $.magnificPopup.open({
	  items: {
	    src: '#subscribe-fail'
	  },
	  type: 'inline'
	});
<% end %>