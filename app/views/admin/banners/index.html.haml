= link_to "Add New Banner", new_admin_banner_path, class: "btn btn-s btn-blue inlineblock-imp"

= link_to "ProductBanner", edit_admin_banner_path(Banner::PRODUCT_BANNER_ID), class: "btn btn-s btn-blue inlineblock-imp"
= link_to "BlogBanner", edit_admin_banner_path(Banner::BLOG_BANNER_ID), class: "btn btn-s btn-blue inlineblock-imp"
= link_to "FAQBanner", edit_admin_banner_path(Banner::FAQ_BANNER_ID), class: "btn btn-s btn-blue inlineblock-imp"

%table.admin-table
  %tr
    %th 編號
    %th 圖片
    %th 連結
    %th 排序

  - @banners.each do |banner|
    %tr
      %td= banner.id
      %td= image_tag(banner.pic_url, :style => 'max-height: 200px; max-width: 200px;')
      %td= banner.link
      %td= banner.sort
      %td= link_to 'Edit', edit_admin_banner_path(banner)
      %td= link_to 'Destroy', admin_banner_path(banner), method: :delete, data: { confirm: 'Are you sure?' }

%nav.page-menu.relative
  = will_paginate(@banners, :renderer => 'BootstrapPaginationHelper::LinkRenderer')